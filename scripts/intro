#!/bin/bash

# Set color variables
NC=$(tput sgr0)
BW=$(tput sgr0 && tput setab 111)
RW=$(tput sgr0 && tput setab 160)

RED=$(tput setaf 124)
RED2=$(tput setaf 196)
RED3=$(tput setaf 160)
ORANGE=$(tput setaf 202)
ORANGE2=$(tput setaf 208)
ORANGE3=$(tput setaf 003)
TEXT=$(tput setaf 002)
T=$(tput setaf 002)
S=$(tput setaf 164)
P=$(tput setaf 063)
O=$(tput setaf 208)
G=$(tput setaf 035)
A=$(tput setaf 165)
B=$(tput setaf 033)
C=$(tput setaf 210)
D=$(tput setaf 075)
E=$(tput setaf 118)
F=$(tput setaf 180)


# Define ASCII art options
art_options=(
    "${RED3}(                                               
 ${RED})\\ )            )         )              )      
${RED3}(()/(  (   (  ( /(    ) ( /(           ( /((     
 ${ORANGE}/(_))))\\ ))\\ )\\())( /( )\\())  (    (  )\\())\\ )  
${ORANGE2}(_)) /((_)((_|(_)\ )(_)|(_)\   )\   )\(_))(()/(  
${TEXT}| _ ${ORANGE3}(_))(_)) | |(_|(_)_| |(_) ((_) ((_) |_ )(_))${TEXT} 
|  _/ -_) -_)| / // _\` | '_ \\/ _ \\/ _ \\  _| || | 
|_| \\___\\___||_\\_\\\\__,_|_.__/\\___/\\___/\\__|\\_, | 
                                           |__/${NC}"
    
    "${T} ____  ____  ____  _  _    __    ____  _____  _____  ____  _  _ 
${S}(  _ \\( ___)( ___)( )/ )  /__\\  (  _ \\(  _  )(  _  )(_  _)( \\/ )
${ORANGE3} )___/ )__)  )__)  )  (  /(__)\\  ) _ < )(_)(  )(_)(   )(   \\  / 
${RED}(__)  (____)(____)(_)\_)(__)(__)(____/(_____)(_____) (__)  (__)"
    
    "${T} ______   ______     ______     __  __     ______     ______     ______     ______    ______   __  __    
${S}/${T}\\  == \\ ${S}/${T}\\  ___\\  ${S} /${T}\\  ___\\  ${S} /${T}\\ \\/ /   ${S} /${T}\\  __ \\  ${S} /${T}\\  == \\ ${S}  /${T}\\  __ \\ ${S}  /${T}\\  __ \\ ${S} /${T}\\__  _\\ ${S}/${T}\\ \\_\\ \\   
${S}\\ ${T}\\  _-/ ${S}\\ ${T}\\  __\\  ${S} \\ ${T}\\  __\\   ${S}\\ ${T}\\  _\"-. ${S} \\ ${T}\\  __ \\ ${S} \\ ${T}\\  __<  ${S} \\ ${T}\\ \\${S}/${T}\\ \\${S}  \\${T} \\ \\${S}/${T}\\ \\  ${S}\\_/${T}\\ \\${S}/ \\ ${T}\\____ \\  
 ${S}\\ ${T}\\_\    ${S}\\ ${T}\\_____\\ ${S} \\ ${T}\\_____\\  ${S}\\ ${T}\\_\\ \\_\\ ${S} \\ ${T}\\_\\ \\_\\ ${S} \\ ${T}\\_____\\ ${S} \\ ${T}\\_____\\ ${S} \\ ${T}\\_____\\  ${S} \\ ${T}\\_\\  ${S}\\/${T}\\_____\\ 
${S}  \\/_/     \\/_____/   \\/_____/   \\/_/\\/_/   \\/_/\\/_/   \\/_____/   \\/_____/   \\/_____/    \\/_/   \\/_____/ 
 ${NC}"

"${F}__________              ${O} __         ${A} __________               ${D}__${E}  _____.___.
${F}\______   \\${S} ____ ${P}  ____ ${O}|  | __${G}_____${A} \______   \ ${B}____   ${C}____${D}_/  |_${E}\__  |   |
${F} |     ___/${S}/ __ \\${P}_/ __ \\${O}|  |/ /${G}\__  \\${A} |    |  _/${B}/  _ \\${C} /  _ \  ${D} __\\${E}/   |   |
${F} |    |  ${S} \  ___/${P}\  ___/${O}|    <  ${G}/ __ \\${A}|    |   ${B}(  <_> |${C}  <_> ) ${D} | ${E} \____   |
${F} |____|  ${S}  \___  >${P}\___  >${O}__|_ \\${G}(____  /${A}______  /${B}\____/ ${C}\____/${D}|__|  ${E}/ ______|
             ${S}  \/     ${P}\/     ${O}\/    ${G} \/      ${A} \/                  ${E}  \/ "
)

# Get a random index from the art options array
random_index=$(( RANDOM % ${#art_options[@]} ))

# Print the randomly selected ASCII art
echo "${art_options[$random_index]}"
# echo "${art_options[3]}"
