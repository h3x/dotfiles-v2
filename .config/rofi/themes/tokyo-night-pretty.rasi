/**
 * ROFI Color theme
 * NAME: tokyo-night-pretty.rasi
 * DESCRIPTION: This is a centered prompt.
 * AUTHOR: Adam Austin
 */

* {
    background-color:            #011423;                        // background
    border-color:                #A277FF;                        // border and prompt underline    
    text-color:                  #24EAF7;                        // unhighlighted text options colors
    font:                        "SauceCodePro Nerd Font Mono 9";
    prompt-font:                 "Ubuntu Bold 9";
    prompt-background:           #011423;                        // prompt background color
    prompt-foreground:           #011423;                        // prompt text color
    prompt-padding:              4px;                            // padding around the prompt text
    alternate-normal-background: #011423;                        // striping color
    alternate-normal-foreground: @text-color;
    selected-normal-background:  #44FFB1;                        // Selected option background color
    selected-normal-foreground:  #011423;                        // selected option text color
    spacing:                     3;                              // Space between the bottom of the promps and the options
}
#window {
    border:  1;                                                 // border width 
    padding: 5px 10px 10px 5px;                                                 
    width: 799;                                                 // Window width 
    border-radius:    10px;
}
#mainbox {
    border:  0;
    padding: 0;
}
#message {
    border:       1px dash 0px 0px ;
    padding:      1px ;
}
#listview {
    fixed-height: 0;
    border:       0px solid 0px 0px ;                          // Border surrounding the options
    spacing:      2px ;                                        // spacing between the options 
    scrollbar:    true;
    padding:      14px 10px 10px ;
}
#element {
    border:  0;
    padding: 1px ;
}
#element.selected.normal {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
}
#element.alternate.normal {
    background-color: @alternate-normal-background;
    text-color:       @alternate-normal-foreground;
}
#scrollbar {
    width:        0px ;
    border:       0;
    handle-width: 0px ;
    padding:      0;
}
#sidebar {
    border: 2px dash 0px 0px ;
}
#button.selected {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
}
#inputbar {
    spacing:    0;
    padding:    1px ;
}
#case-indicator {
    spacing:    0;
}
#entry {
    padding: 4px 4px;
    expand: false;
    width: 10em;
}
#prompt {
    padding:          @prompt-padding;
    background-color: @prompt-background;
    text-color:       @prompt-foreground;
    font:             @prompt-font;
}

element-text {
    background-color: inherit;
    text-color:       inherit;
}

